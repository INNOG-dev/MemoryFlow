<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mf_background">

    <!-- Carte centrale -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/finishCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/mf_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="48dp"
            android:paddingHorizontal="24dp">

            <!-- IcÃ´ne -->
            <ImageView
                android:id="@+id/finishIcon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerInside"
                android:src="@drawable/award"
                app:tint="@color/mf_purple" />

            <!-- Titre -->
            <TextView
                android:id="@+id/finishTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session terminÃ©e ðŸŽ‰"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/mf_text_primary"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"/>

            <!-- Sous texte -->
            <TextView
                android:id="@+id/CardStudiedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Toutes les cartes ont Ã©tÃ© Ã©tudiÃ©es"
                android:textColor="@color/mf_text_secondary"
                android:textSize="18sp" />

            <!-- Bouton -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/finishButton"
                style="@style/Widget.MyApp.Button.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Retour aux decks"
                android:textSize="18sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>