<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MemoryFlow" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- ðŸŽ¨ Primary (Violet MemoryFlow) -->
        <item name="colorPrimary">@color/mf_purple</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- ðŸŽ¨ Secondary -->
        <item name="colorSecondary">@color/mf_purple_soft</item>
        <item name="colorOnSecondary">@color/mf_text_primary</item>

        <!-- ðŸŽ¨ Backgrounds -->
        <item name="android:colorBackground">@color/mf_background</item>
        <item name="colorSurface">@color/mf_surface</item>
        <item name="colorOnSurface">@color/mf_text_primary</item>

        <!-- ðŸŽ¨ Outline / Divider -->
        <item name="colorOutline">@color/mf_outline</item>

        <!-- ðŸ§± Components -->
        <item name="materialButtonStyle">@style/Widget.MyApp.Button.Filled</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MyApp.Button.Outlined</item>
        <item name="materialCardViewStyle">@style/Widget.MyApp.Card</item>

        <item name="popupMenuStyle">@style/ThemeOverlay.MemoryFlow.PopupMenu</item>

    </style>

    <style name="MFReviewButton" parent="Widget.Material3.Button">
        <item name="autoSizeTextType">none</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="QuizButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ThemeOverlay.MemoryFlow.PopupMenu"
        parent="ThemeOverlay.Material3.Light">

        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:textColor">@color/mf_text_primary</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <!-- ======================= -->
    <!-- COMPONENT STYLES -->
    <!-- ======================= -->

    <style name="Widget.MyApp.Button.Filled" parent="Widget.Material3.Button">
        <item name="cornerRadius">14dp</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
    </style>

    <style name="Widget.MyApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">14dp</item>
        <item name="strokeColor">@color/mf_outline</item>
    </style>

    <style name="Widget.MyApp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">18dp</item>
    </style>

</resources>